{
	"name": "RSS",
	"modules": [
		{ "name": "GoogleFeed", "dependencies": [] },
		{ "name": "Rss", "dependencies": [] }
	],
    "resources": [
		"google-feed.js",
		"rss.controller.js"
    ],
	"html": {
		"widget": "rss_reader.html"
	},
	"settingsOptions": [
		{
			"label": "Display mode",
			"name": "display",
			"type": "select",
			"options": [
                { "value": "headlines", "display": "Headlines" },
                { "value": "full", "display": "Full" },
                { "value": "gallery", "display": "Gallery" }
            ]
		},
		{
			"label": "Refresh rate",
			"name": "refreshRate",
			"type": "number",
			"appendix": " seconds",
			"min": 10,
			"max": 3600,
			"step": 5
		},
		{
			"label": "Feed URLs",
			"name": "feeds",
			"type": "textArray",
			"style": "long"
		},
        {
            "label": "Widget Title",
            "name": "title",
            "type": "text",
            "style": "long"
        },
        {
            "label": "Items count",
            "name": "count",
            "type": "number",
            "min": 1,
            "max": 20,
            "step": 1
        }
	],
	"settings": {
		"display": "headlines",
		"refreshRate": 300,
        "count": 4
	}
}